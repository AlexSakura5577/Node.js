<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>

  <body>
    <%- include('./partials/nav.ejs') %>
      <form id="post-form" method="post" action="/add-post">
        <div class="form-info">
          <label class="label">Post Title
            <input type="text" name="title">
          </label>
          <label class="label">Author
            <input type="text" name="author">
          </label>
        </div>
        <div class="form-text">
          <label class="label">Post Text
            <textarea name="text" class="post-text"></textarea>
          </label>
        </div>
        <div class="form-button">
          <input type="submit" value="Submit">
        </div>
      </form>
  </body>

</html>